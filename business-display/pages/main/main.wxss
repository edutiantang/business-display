/* pages/main/main.wxss */

page {
  height: 100%;
  min-height: 100%;
}

.row {
  margin-bottom: 10rpx; 
}

.slideImage {
  width: 100%;
  height: 400rpx;
}

.basicInfo {
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.businessNameRow {
  margin-bottom: 30rpx; 
}

.businessName {
  color: black;
  font-size: 50rpx;
}

.phoneNumber {
  text-decoration-line: underline; 
}

.address {
  text-decoration-line: underline; 
}

.buttonBottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.buttonNavigation {
  width: 50%;
  border-radius: 0;
  background-color: white;
}

.buttonNavigation::after {
  border-radius: 0;
}

.buttonCall {
  width: 50%;
  border-radius: 0;
  background-color: #008000; /* green */
  color: white; 
}

.buttonCall::after {
  border-radius: 0;
}